{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "./"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "./dist/**/*"]
}
